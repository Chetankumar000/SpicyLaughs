@page
@model IndexModel
@{
    ViewData["Title"] = "SpicyLaughs";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<style>
    /* Custom CSS */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
    }
    .container-fluid{
        padding:0;
    }
    .navbar {
        background-color: #fff;
    }

    .navbar-brand {
        font-size: 25px;
        font-weight: 600;
    }

        .hero {
            background: url('https://cdn.pixabay.com/photo/2014/06/11/17/00/food-366875_1280.jpg') center/cover no-repeat;
            color: #fff;
            padding: 90px 0;
            text-align: center;
            min-height: 96vh; /* Set minimum height to cover the entire viewport */
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .hero h1 {
                font-size: 54px;
                font-weight: 900;
                margin-bottom: 20px;
            }

            .hero p {
                font-size: 22px;
                margin-bottom: 30px;
            }

            .hero .btn {
                font-size: 24px;
                font-weight: 700;
                border-radius: 50px;
            }


    .featured-dishes {
        background-color: #fff;
        padding: 80px 0;
    }

        .featured-dishes h2 {
            font-size: 36px;
            font-weight: 800;
            margin-bottom: 40px;
        }

    .card {
        border: none;
        border-radius: 10px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card img {
            border-radius: 10px 10px 0 0;
        }

    .card-title {
        font-size: 26px;
        font-weight: 700;
        margin: 20px 0 10px;
    }

    .card-text {
        font-size: 20px;
        margin-bottom: 30px;
    }

    .card .btn {
        background-color: #e74c3c;
        color: #fff;
        font-size: 20px;
        border-radius: 50px;
        font-weight: 700;
        transition: background-color 0.2s;
    }

        .card .btn:hover {
            background-color: #c0392b;
        }
</style>
<title>SpicyLaughs - Food Serving App</title>
</head>

    <header class="hero">
        <div class="container">
            <h1>Welcome to SpicyLaughs</h1>
            <p>Discover a world of delicious dishes.</p>
            <a asp-page="/Dishes/Index" class="btn btn-primary btn-lg">View Menu</a>
        </div>
    </header>

    <!-- Featured Dishes Section -->
    <section class="featured-dishes">
        <div class="container">
            <h2 class="text-center">Featured Dishes</h2>
            <div class="row">
                <!-- Add featured dishes with images and descriptions -->
            @foreach(var dish in @Model.Dishes)
            {
            <div class="col-lg-4">
                <div class="card">
                    <img src=@dish.ImageURL style="max-height:250px;" class="card-img-top" alt="@dish.Title">
                    <div class="card-body">
                        <h5 class="card-title">@dish.Title</h5>
                        <p class="card-text">@dish.Description</p>
                        <a asp-page="/Orders/AddItemToShoppingCart" asp-route-id="@dish.Id"  class="btn">Order Now</a>
                    </div>
                </div>
            </div>
            }

            
            </div>

        </div>
    </section>
<section class="container-fluid" style="background:url('https://cdn.pixabay.com/photo/2014/06/11/17/00/food-366875_1280.jpg') center/cover no-repeat;">
    <h2 class="pt-4 pb-4 text-center text-white">Our Best Services</h2>
    <div class="row justify-content-center align-middle">
        <div class="col-md-2">
            <div class="card bg-transparent">
                <img src="   https://cdn-icons-png.flaticon.com/512/9183/9183489.png " class="card-img-top pb-2 p-4 pt-0" alt="Service 1" height="200">
                <div class="card-body pt-0">
                    <h5 class="card-title text-center text-white">Fast Delivery</h5>
                </div>
            </div>
        </div>
        <div class="col-md-2 m-md-5 mt-md-0 mb-md-0">
            <div class="card bg-transparent">
                <img src="   https://cdn-icons-png.flaticon.com/512/6774/6774898.png " class="card-img-top pb-2 p-4 pt-0" alt="Service 2" height="200">
                <div class="card-body pt-0">
                    <h5 class="card-title text-center text-white">Variety of Cuisines</h5>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-transparent">
                <img src="   https://cdn-icons-png.flaticon.com/512/5643/5643764.png " class="card-img-top pb-2 p-4 pt-0" alt="Service 3" height="200">
                <div class="card-body pt-0">
                    <h5 class="card-title text-center text-white">Easy Ordering</h5>
                </div>
            </div>
        </div>
    </div>
</section>
