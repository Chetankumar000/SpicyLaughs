<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SpicyLaughs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PractiseProject.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.1/font/bootstrap-icons.min.css" rel="stylesheet">



</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow text-white" style="background: url('https://cdn.pixabay.com/photo/2014/06/11/17/00/food-366875_1280.jpg') center/cover no-repeat;">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-page="/Index"><i class="bi bi-dice-5 p-2"></i>SpicyLaughs</a>
                <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="navbar-nav text-white">
                            <a class="nav-link text-dark text-white" asp-page="/Dishes/index"><i class="icon-food"></i>Dishes</a>
                        </li>
                        @* <ul class="navbar-nav flex-grow-1"> *@
                           @*  <li class="navbar-nav">
                                <a class="nav-link text-dark" asp-page="/Categories/index"><i class="badge-info bi-film p-1"></i>Categories</a>
                            </li> *@

                       @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                        { 
                            <li class="nav-Model dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-Haspoppup="true" aria-expanded="false">
                                    <i class="bi bi-gear p-1"></i>Management
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-page="/Categories/index"><i class="bi bi-tags p-1"></i>Categories</a></li>
                                    
                                </ul>
                            </li>
                         }
                       



                    </ul>
                    @if (Context.Request.Path == "/Dishes")
                    {
                        <form method="get" asp-page="index" class="d-flex pe-2" role="search">
                            <input name="searchString" class="form-control me-1" type="text" placeholder="Search Dishes... " aria-label="Search">
                            <button class="btn btn-success text-white pe-2" type="submit"><i class="bi bi-search"></i></button>
                        </form>
                    }
                    
                    <ul class="navbar-nav">
                        @await Component.InvokeAsync("ShoppingCartSummary")
                    </ul>
                    <partial name="_Identity" />
                    
                </div> 
            </div>
        </nav>
    </header>
    <main class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </main>


    <footer>
        <div class="footer-content">
            <p>&copy; @DateTime.Now.Year SpicyLaughs.com</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

