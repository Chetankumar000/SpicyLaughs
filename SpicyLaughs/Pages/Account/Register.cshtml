@page
@model SpiceyLaughs.Pages.Account.RegisterModel
@{

    ViewData["Title"] = "Sign Up";
}
<style>
    body {
        background-color: lightgrey;
    }
</style>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-7">
            <div class="card border shadow-lg">
                <div class="card-header text-white text-center py-3" style="background:url('https://cdn.pixabay.com/photo/2014/06/11/17/00/food-366875_1280.jpg') center/cover no-repeat;">
                    <h4 class="mb-0">Sign Up for a new Account</h4>
                </div>
                <div class="card-body p-4">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Sorry!</strong> - @TempData["Error"]
                        </div>
                    }

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group text-center mb-3">
                            <img class="border-info rounded-circle" style="max-height:200px;" id="ImgPreview" />
                        </div>
                        
                        <div class="mb-3 form-group">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control">
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="ImageURL" class="control-label"></label>
                            <input asp-for="ImageURL" class="form-control" />
                            <span asp-validation-for="ImageURL" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="row">
                        <div class="col-md-6 mb-3 form-group">
                            <label asp-for="ContactPhone" class="form-label"></label>
                            <input asp-for="ContactPhone" type="password" class="form-control">
                            <span asp-validation-for="ContactPhone" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3 form-group">
                            <label asp-for="ContactPinCode" class="form-label"></label>
                            <input asp-for="ContactPinCode" type="password" class="form-control">
                            <span asp-validation-for="ContactPinCode" class="text-danger"></span>
                        </div>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="Address" class="form-label"></label>
                            <textarea asp-for="Address" type="password" class="form-control"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        
                       


                        <div class="d-grid gap-3 col-md-4 offset-4">
                            <button type="submit" class="btn btn-success btn-md rounded-pill">Sign Up</button>
                            <a class="btn btn-secondary btn-md rounded-pill" asp-page="/Dishes/Index">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ImgPreview');
            output.src = $('ImageURL').val() == undefined ? "https://static.vecteezy.com/system/resources/previews/002/318/271/non_2x/user-profile-icon-free-vector.jpg" : $('ImageURL').val();
        })

        $('#ImageURL').on("change", function () {
            var output = document.getElementById('ImgPreview');
            output.src = $(this).val();
        })
    </script>
}