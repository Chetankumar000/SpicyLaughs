@page "{id:min(1)}"
@model SpiceyLaughs.Pages.Categories.DeleteModel
@{
    ViewData["Title"] = "Delete Confirmation";
}
<div class="row-text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete Confirmation For @Model.Category.Title</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-height:250px;" id="ImgPreview" />
                </div>
                <div class="form-group pb-2">
                    <label asp-for="Category.ImageURL" class="control-label"></label>
                    <input asp-for="Category.ImageURL" class="form-control" readonly />
                    <span asp-validation-for="Category.ImageURL" class="text-danger"></span>
                </div>
                <div class="form-group pb-2">
                    <label asp-for="Category.Title" class="control-label"></label>
                    <input asp-for="Category.Title" class="form-control" readonly />
                    <span asp-validation-for="Category.Title" class="text-danger"></span>
                </div>
                <div class="form-group pb-4">
                    <label asp-for="Category.Description" class="control-label"></label>
                    <input asp-for="Category.Description" class="form-control" readonly />
                    <span asp-validation-for="Category.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-end" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-page="index">Show All</a>
                </div>

            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ImgPreview');
            output.src = $('#Category_ImageURL').val();
        })


    </script>
}
